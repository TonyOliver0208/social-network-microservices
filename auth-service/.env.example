# Environment Configuration
NODE_ENV=development
PORT=3001

# JWT Configuration
JWT_ACCESS_SECRET=your-access-token-secret-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-token-secret-minimum-32-characters
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=devcoll-auth-service
JWT_AUDIENCE=devcoll-api

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Security Configuration
COOKIE_SECRET=your-cookie-secret-minimum-32-characters
CSRF_SECRET=your-csrf-secret-minimum-32-characters

# Service URLs
API_GATEWAY_URL=http://localhost:3000
USER_SERVICE_URL=http://localhost:3002
CLIENT_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=combined.log
ERROR_LOG_FILE=errors.log