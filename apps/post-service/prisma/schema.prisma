generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client-post"
}

datasource db {
  provider = "postgresql"
  url      = env("POST_DATABASE_URL")
}

model Post {
  id        String   @id @default(uuid())
  content   String   @db.Text
  authorId  String
  mediaUrls String[] @default([])
  privacy   Privacy  @default(PUBLIC)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comments          Comment[]
  likes             Like[]
  postTags          PostTag[]
  questionVotes     QuestionVote[]
  favoriteQuestions FavoriteQuestion[]
  answers           Answer[]  // Answers to this question
  
  @@index([authorId])
  @@index([createdAt])
  @@map("posts")
}

model Answer {
  id         String   @id @default(uuid())
  content    String   @db.Text
  questionId String   // The question (Post) this answers
  authorId   String
  isAccepted Boolean  @default(false)
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  question      Post         @relation(fields: [questionId], references: [id], onDelete: Cascade)
  votes         AnswerVote[]
  comments      Comment[]    @relation("AnswerComments")
  
  @@index([questionId])
  @@index([authorId])
  @@index([isAccepted])
  @@map("answers")
}

model AnswerVote {
  id       String   @id @default(uuid())
  answerId String
  userId   String
  voteType VoteType // UP or DOWN
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  answer Answer @relation(fields: [answerId], references: [id], onDelete: Cascade)
  
  @@unique([answerId, userId])
  @@index([answerId])
  @@index([userId])
  @@map("answer_votes")
}

model Comment {
  id       String  @id @default(uuid())
  content  String  @db.Text
  postId   String? // Optional - for question comments
  answerId String? // Optional - for answer comments
  authorId String
  parentId String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  post     Post?     @relation(fields: [postId], references: [id], onDelete: Cascade)
  answer   Answer?   @relation("AnswerComments", fields: [answerId], references: [id], onDelete: Cascade)
  replies  Comment[] @relation("CommentReplies")
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  
  @@index([postId])
  @@index([answerId])
  @@index([authorId])
  @@index([parentId])
  @@map("comments")
}

model Like {
  id       String @id @default(uuid())
  postId   String
  userId   String
  
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
  @@map("likes")
}

model QuestionVote {
  id         String   @id @default(uuid())
  postId     String
  userId     String
  voteType   VoteType // UP or DOWN
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
  @@map("question_votes")
}

model FavoriteQuestion {
  id        String   @id @default(uuid())
  postId    String
  userId    String
  listName  String?  @default("default") // Optional list organization
  
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
  @@index([userId, listName])
  @@map("favorite_questions")
}

model Tag {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?  @db.Text
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  postTags    PostTag[]
  
  @@index([name])
  @@map("tags")
}

model PostTag {
  id     String @id @default(uuid())
  postId String
  tagId  String
  
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)
  
  @@unique([postId, tagId])
  @@index([postId])
  @@index([tagId])
  @@map("post_tags")
}

enum Privacy {
  PUBLIC
  FRIENDS
  PRIVATE
}

enum VoteType {
  UP
  DOWN
}
